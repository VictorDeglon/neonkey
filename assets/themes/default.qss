/* Default theme */
QWidget {
    background-color: #2b2b2b;
    color: #e0e0e0;
    font-family: "Courier New", monospace;
}
QPushButton {
    background-color: #444;
    border: 1px solid #555;
    padding: 5px;
    border-radius: 4px;
}
QPushButton:hover {
    border: 1px solid #7f7;
}
QPushButton:pressed {
    background-color: #333;
}
